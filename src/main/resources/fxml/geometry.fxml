<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="container" styleClass="container" stylesheets="@../css/main.css"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.radsoltan.controllers.Geometry">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="New" />
            <MenuItem text="Open" />
            <MenuItem text="Save" />
            <MenuItem text="Save As" />
        </Menu>
        <Menu text="About" />
        <Menu text="Help" />
    </MenuBar>
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <GridPane styleClass="main">
            <VBox styleClass="grid-cell" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label styleClass="heading" text="Project Details" />
                <VBox styleClass="field-wrapper, border-separator">
                    <HBox>
                        <Label styleClass="field-label" text="Test:" />
                        <TextField styleClass="project-details-field"/>
                    </HBox>
                </VBox>
            </VBox>
            <VBox styleClass="grid-cell" GridPane.columnIndex="1" GridPane.rowIndex="0">

            </VBox>
            <VBox styleClass="grid-cell" GridPane.columnIndex="0" GridPane.rowIndex="1">

            </VBox>
            <VBox styleClass="grid-cell" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <HBox styleClass="calculate-btn-wrapper">
                    <Button fx:id="cancelButton" onAction="#cancel" text="Cancel"/>
                    <Button fx:id="okButton" onAction="#applyChanges" text="OK"/>
                </HBox>
            </VBox>
        </GridPane>
    </ScrollPane>
</VBox>
